<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0"
      prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.isachenkoff.project_statistics.MainController">
    <children>
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#onChooseDir" text="Выбрать папку"/>
                <Button fx:id="analysisBtn" disable="true" mnemonicParsing="false" onAction="#onAnalysis"
                        text="Анализ"/>
            </children>
        </HBox>
        <TreeTableView fx:id="table" VBox.vgrow="ALWAYS"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
