<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.isachenkoff.project_statistics.MainController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
            <Label text="Папка:" />
                <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#onChooseDir" text="Выбрать папку" />
                <Button fx:id="analysisBtn" disable="true" mnemonicParsing="false" onAction="#onAnalysis" text="Анализ" />
            </children>
        </HBox>
      <HBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox spacing="10.0">
               <children>
                      <TitledPane text="Тип файла">
                          <content>
                              <ListView fx:id="fileTypeListView" prefHeight="200.0" prefWidth="180.0" />
                          </content>
                      </TitledPane>
                  <CheckBox fx:id="emptyDirsCheck" mnemonicParsing="false" onAction="#onEmptyDirs" text="Пустые папки" />
                  <CheckBox fx:id="textFilesOnlyCheck" mnemonicParsing="false" onAction="#onTextFiles" text="Только текстовые файлы" />
               </children>
            </VBox>
              <TreeTableView fx:id="table" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
