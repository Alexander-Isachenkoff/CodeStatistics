<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="640.0" prefWidth="1200.0" spacing="10.0" stylesheets="@../css/style.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.isachenkoff.project_statistics.AnalysisController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Папка:"/>
                <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#onChooseDir" text="Выбрать папку"/>
                <Button fx:id="analysisBtn" disable="true" mnemonicParsing="false" onAction="#onAnalysis"
                        text="Анализ"/>
            </children>
        </HBox>
        <SplitPane dividerPositions="0.16, 0.65" VBox.vgrow="ALWAYS">
            <items>
                <VBox spacing="10.0" SplitPane.resizableWithParent="false">
                    <children>
                        <TitledPane text="Тип файла">
                            <content>
                                <VBox style="-fx-padding: 0;">
                                    <children>
                                        <HBox style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 0 0 1 0;">
                                            <children>
                                                <CheckBox fx:id="selectAllCheck" mnemonicParsing="false" selected="true"
                                                          text="Выбрать все"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </padding>
                                        </HBox>
                                        <ListView fx:id="fileTypeListView" prefHeight="250.0" prefWidth="180.0"
                                                  styleClass="file-types-list"/>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>
                        <CheckBox fx:id="emptyDirsCheck" mnemonicParsing="false" onAction="#onEmptyDirs"
                                  text="Пустые папки"/>
                        <CheckBox fx:id="textFilesOnlyCheck" mnemonicParsing="false" onAction="#onTextFiles"
                                  text="Только текстовые файлы"/>
                    </children>
                </VBox>
                <TreeTableView fx:id="table" style="-fx-border-color: lightgray; -fx-border-width: 1;">
                    <columns>
                        <TreeTableColumn prefWidth="202.0" text="Column X"/>
                    </columns>
                </TreeTableView>
                <PieChart fx:id="pieChart"
                          style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </items>
        </SplitPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
